@model List<Employee>

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Department</th>
            <th>Phone No.</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var emp in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center">

                        <div class="ms-3">
                            <p class="fw-normal mb-1">@emp.Name</p>

                        </div>
                    </div>
                </td>
                <td>

                    <p class="text-muted mb-0">@emp.Sex</p>
                </td>
                <td>

                    <p class="text-muted mb-0">@emp.Email</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@emp.Designation</p>
                </td>
                <td>
                    <p class="text-muted mb-0">@emp.Department</p>
                </td>
                <td>@emp.Phone</td>
                <td>
                    <p class="text-muted mb-0">@emp.Address</p>
                </td>
            </tr>
        }
    </tbody>
</table>