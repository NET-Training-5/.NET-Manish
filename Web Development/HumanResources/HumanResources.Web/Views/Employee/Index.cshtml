
@model List<Employee>

@{
	ViewData["Title"] = "Employees";
}


<table class="table">
	<thead>
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th>Address</th>
			<th>Email</th>
			<th>Gender</th>
			<th>Dob</th>
			<th>Join Date</th>
			<th>Department</th>
			<th>Designation</th>
			<th>Actions</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var employee in Model)
		{
			var profileSrc = string.IsNullOrEmpty(employee.ProfilePath)
				? "/images/person.jpg"
				: employee.ProfilePath;
			<tr>
				<td><img class="rounded-circle" src="@profileSrc" height="25" /></td>
				<td>@employee.Name</td>
				<td>@employee.Address</td>
				<td>@employee.Email</td>
				<td>@employee.Gender</td>
				<td>@employee.Dob?.ToString("MMMM dd, yyyy")</td>
				<td>@employee.JoinDate.ToString("MMMM dd, yyyy")</td>
				<td>@employee.Department?.Name</td>
				<td>@employee.Designation?.Name</td>
				<td><a href="/employee/edit/@employee.Id"><i class="bi bi-pencil-square"></i></a></td>
				<td><a href="/employee/delete/@employee.Id"><i class="bi bi-trash text-danger"></i></a></td>

			</tr>
		}
	</tbody>
</table>

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
