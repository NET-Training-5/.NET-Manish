@using HumanResources.Web.Enums;
@model Employee
@{
	ViewData["Title"] = "Delete";
}
<div class="card p-5 shadow">
	<form action="/employee/delete" method="post" class="row">
		<input type="hidden" asp-for=Id />
		<div class="col-md-6 mb-3">
			<label asp-for=Name class="form-label"></label>
			<input asp-for=Name class="form-control" readonly>
		</div>
		<div class="col-md-6 mb-3">
			<label asp-for=Email class="form-label"></label>
			<input asp-for=Email class="form-control" readonly>
		</div>

		<div class="col-md-6 mb-3">
			<div class="d-flex flex-column">
				<label asp-for=Gender class="form-label d-block" readonly></label>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name=Gender id="male" value="@Gender.Male" readonly>
					<label class="form-check-label" for="male" readonly>Male</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name=Gender id="female" value="@Gender.Female" readonly>
					<label class="form-check-label" for="female" readonly>Female</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name=Gender id="others" value="@Gender.Others" readonly>
					<label class="form-check-label" for="others" readonly>Others</label>
				</div>
			</div>
		</div>
		<div class="col-md-6 mb-3">
			<label asp-for=Address class="form-label"></label>
			<textarea asp-for=Address class="form-control" rows="3" readonly></textarea>
		</div>

		<div class="col-md-6 mb-3">
			<label asp-for=Dob class="form-label"></label>
			<input asp-for=Dob class="form-control" readonly>
		</div>
		<div class="col-md-6 mb-3">
			<label asp-for=Designation class="form-label"></label>
			<input asp-for=Designation class="form-control" readonly>
		</div>

		<div class="col-md-6 mb-3">
			<label asp-for=Department class="form-label"></label>
			<input asp-for=Department class="form-control" readonly>
		</div>
		<div class="col-md-6 mb-3">
			<label asp-for=JoinDate class="form-label"></label>
			<input asp-for=JoinDate class="form-control" readonly>
		</div>
		<div class="col-md-6">
			<button type="submit" class="btn btn-primary">Delete</button>
			<a href="/employee/index" class="btn btn-success">Cancel</a>
		</div>
	</form>
</div>